@model TP10.ViewModels.ModificarTareaViewModel

<h1>Editar Tablero</h1>

<form id="editarForm">
    
    <div>
        <label for="IdTab">Id Tablero:</label>
        <input type="number" id="IdTab" name="IdTab" value="@Model.IdTablero" />
        <label for="Nombre">Nombre:</label>
        <input type="text" id="Nombre" name="Nombre" value="@Model.Nombre" />
        <label for="est">Estado:</label>
        <input type="text" id="est" name="est" value="@Model.Estado" />
        <label for="desc">Descripción:</label>
        <input type="text" id="desc" name="descripcion" value="@Model.Descripcion" />
        <label for="color">Color:</label>
        <input type="text" id="color" name="color" value="@Model.Color" />
        <label for="IdUsu">Id Usuario:</label>
        <input type="number" id="IdUsu" name="IdUsu" value="@Model.IdUsuarioAsignado" />
    </div>
    <div>
        <button type="button" onclick="guardarEdicion()">Guardar cambios</button>
    </div>
</form>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        function guardarEdicion() {
            var formData = $("#editarForm").serialize();

            $.ajax({
                type: "POST",
                url: "/Tarea/Editar",
                data: formData,
                success: function (data) {
                   
                    console.log("Editado con éxito");
                },
                error: function (error) {
                    console.error("Error al editar: " + error.statusText);
                }
            });
        }
    </script>
}
