@model TP10.ViewModels.ModificarTareaViewModel

<div class="container mt-4">
    <h1>Editar Tarea</h1>

    <form asp-action="Editar" asp-controller="Tarea" method="post">

        <input asp-for="@Model.Id" type="hidden" />

        <div class="mb-3">
            <label asp-for="@Model.IdTablero" class="form-label">Id Tablero:</label>
            <input asp-for="@Model.IdTablero" class="form-control" />
            <span asp-validation-for="@Model.IdTablero" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Nombre" class="form-label">Nombre:</label>
            <input asp-for="@Model.Nombre" class="form-control" />
            <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Estado" class="form-label">Estado:</label>
            <input asp-for="@Model.Estado" class="form-control" />
            <span asp-validation-for="@Model.Estado" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Descripcion" class="form-label">Descripción:</label>
            <input asp-for="@Model.Descripcion" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Color" class="form-label">Color:</label>
            <input asp-for="@Model.Color" class="form-control" />
            <span asp-validation-for="@Model.Color" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.IdUsuarioAsignado" class="form-label">Id Usuario Asignado:</label>
            <input asp-for="@Model.IdUsuarioAsignado" class="form-control" />
            <span asp-validation-for="@Model.IdUsuarioAsignado" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar cambios</button>
    </form>
</div>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
