@model TP10.ViewModels.ModificarUsuarioViewModel

<div class="container mt-4">
    <h1 class="modal-title">Editar Usuario</h1>

    <form asp-action="Editar" asp-controller="Usuario" method="post">

        <input asp-for="@Model.Id" type="hidden" />

        <div class="mb-3">
            <label asp-for="@Model.Nombre" class="form-label">Nombre:</label>
            <input asp-for="@Model.Nombre" class="form-control" />
            <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Contrasenia" class="form-label">Contraseña:</label>
            <input asp-for="@Model.Contrasenia" class="form-control" />
            <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Rol" class="form-label">Rol:</label>
            <select asp-for="@Model.Rol" class="form-control">
                <option value="">Selecciona un rol</option>
                <option value="Admin">Admin</option>
                <option value="Operador">Operador</option>
            </select>
            <span asp-validation-for="@Model.Rol" class="text-danger"></span>
        </div>

            
            
            
        

        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Guardar cambios</button>
        </div>
    </form>
</div>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        var errorMessage = '@Html.Raw(TempData["ErrorMessage"])'; // Utiliza Html.Raw para evitar el escape de caracteres especiales
        if (errorMessage) {
            alert(errorMessage);
        }

        $(document).ready(function () {
            $('.hidden-menu').removeClass('hidden-menu');
        });
    </script>
}
   
