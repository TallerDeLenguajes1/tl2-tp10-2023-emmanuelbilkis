@model List<TP10.ViewModels.TareaOperadorViewModel>

<div class="container mt-4">
    <h1>Listado de Tareas</h1>
    <p class="alert-info">Aquí puede encontrar todas las tareas que se le asignaron.</p>
    <div class="alert-info">Si desea ver las tareas organizadas por tablero presione el botón. <a class="btn btn-danger btn-sm" asp-area="" asp-controller="Tablero" asp-action="Index">Ir</a> </div>
    <nav class="mb-3">
        <a class="btn btn-primary" asp-action="Alta" asp-controller="Tarea">Agregar Tarea</a>
    </nav>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Tablero</th>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Descripción</th>
                <th>Usuario</th>
                <th>Color</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tarea in Model)
            {
                <tr>
                    
                    <td>@tarea.TableroAsignado</td>
                    <td>@tarea.Nombre</td>
                    <td>@tarea.Estado.ToString()</td>
                    <td>@tarea.Descripcion</td>
                    <td>@tarea.UsuarioAsignado</td>
                    <td><div class="color-box" style="background-color: @tarea.Color;"></div></td>
                    <td>

                        @if(tarea.UsuarioConectado == tarea.UsuPropTableroAsignadoId)
                        {
                            <a class="btn btn-warning btn-sm" asp-action="Editar" asp-controller="Tarea" asp-route-id="@tarea.Id">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Borrar" asp-controller="Tarea" asp-route-id="@tarea.Id" onclick="return confirm('¿Estás seguro de que deseas borrar esta Tarea?')">Borrar</a>
                            <a class="btn btn-danger btn-sm" asp-action="CambiarEstado" asp-controller="Tarea" asp-route-idTarea="@tarea.Id">Cambiar Estado</a>
                        }

                        @if (tarea.UsuarioConectado != tarea.UsuPropTableroAsignadoId)
                        {
                            <a class="btn btn-danger btn-sm" asp-action="CambiarEstado" asp-controller="Tarea" asp-route-idTarea="@tarea.Id">Cambiar Estado</a>
                        }

                        @if (tarea.TableroAsignado == "Sin tablero asignado")
                        {
                            <a class="btn btn-warning btn-sm" asp-action="Editar" asp-controller="Tarea" asp-route-id="@tarea.Id">AsignarTablero</a>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .color-box {
        width: 20px;
        height: 20px;
        border: 1px solid #ccc;
        border-radius: 3px;
    }

</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.hidden-menu').removeClass('hidden-menu');
        });
    </script>
}
