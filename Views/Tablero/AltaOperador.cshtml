@model TP10.ViewModels.CrearTableroViewModel

<div class="container mt-4">
    <h1>Crear Tablero</h1>
    <h2>Aquí puede crerse un tablero</h2>
    @if (!string.IsNullOrEmpty(TempData["SinTableros"] as string))
    {
        <p class="alert-info">@TempData["SinTableros"]</p>
    }

    <form asp-action="AltaOperador" asp-controller="Tablero" method="post">

        <div class="mb-3">
            <input type="hidden" asp-for="@Model.IdUsuarioPropietario" />
            <span asp-validation-for="@Model.IdUsuarioPropietario" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Nombre" class="form-label">Nombre:</label>
            <input asp-for="@Model.Nombre" class="form-control" />
            <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Descripcion" class="form-label">Descripción:</label>
            <input asp-for="@Model.Descripcion" class="form-control" />
            <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Crear</button>

    </form>
</div>


@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.hidden-menu').removeClass('hidden-menu');
        });
    </script>
}



