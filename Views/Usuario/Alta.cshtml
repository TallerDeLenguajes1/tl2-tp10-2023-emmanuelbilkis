@model TP10.ViewModels.CrearUsuarioViewModel

<h1>Crear Usuario</h1>

<form asp-action="Alta" asp-controller="Usuario" method="post" class="form-control">

    <div>
        <label asp-for="@Model.Nombre">Nombre:</label>
        <input asp-for="@Model.Nombre" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.Contrasenia">Contraseña:</label>
        <input asp-for="@Model.Contrasenia" />
        <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="@Model.Rol">Rol:</label>
        <input asp-for="@Model.Rol" />
        <span asp-validation-for="@Model.Rol" class="text-danger"></span>
    </div>
    <div>
        <button class="btn-primary" type="submit">Crear</button>
    </div>
</form>
@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
