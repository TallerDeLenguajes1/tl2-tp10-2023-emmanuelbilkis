@model TP10.ViewModels.CrearTareaViewModel

<h1>Crear Taraa</h1>

<form id="crearForm">

    <div>
        <label for="IdTab">Id Tablero:</label>
        <input type="number" id="IdTab" name="IdTab"/>
        <label for="Nombre">Nombre:</label>
        <input type="text" id="Nombre" name="Nombre" />
        <label for="est">Estado:</label>
        <input type="text" id="est" name="est" />
        <label for="desc">Descripción:</label>
        <input type="text" id="desc" name="descripcion" />
        <label for="color">Color:</label>
        <input type="text" id="color" name="color" />
         <label for="IdUsu">Id Usuario:</label>
        <input type="number" id="IdUsu" name="IdUsu"/>
    </div>

    <div>
        <button type="button" onclick="guardar()">Crear</button>
    </div> 
</form>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        function guardar(event) {

            var formData = $("#crearForm").serialize();

            $.ajax({
                type: "POST",
                url: "/Tarea/Alta",
                data: formData,
                success: function (data) {
                    console.log("Tarea creada con éxito");
                },
                error: function (error) {
                    console.error("Error al crear: " + error.statusText);
                }
            });
        }
    </script>

}