@model TP10.ViewModels.ModificarTableroViewModel

<div class="container mt-4">
    <form asp-action="Editar" asp-controller="Tablero" method="post">

        <input asp-for="@Model.Id" type="hidden" />

        <div class="mb-3">
            <label asp-for="@Model.IdUsuarioPropietario" class="form-label">Id Usuario Propietario:</label>
            <input asp-for="@Model.IdUsuarioPropietario" class="form-control" />
            <span asp-validation-for="IdUsuarioPropietario" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Nombre" class="form-label">Nombre:</label>
            <input asp-for="@Model.Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.Descripcion" class="form-label">Descripción:</label>
            <textarea asp-for="@Model.Descripcion" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Editar</button>
    </form>
</div>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

