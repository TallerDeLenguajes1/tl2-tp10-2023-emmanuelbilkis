@using TP10.ViewModels
@model UsuarioOperadorViewModel

<div class="container mt-4">
    <h1>Listado de Usuarios</h1>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Nombre</th>
                <th>Rol</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model.Usuarios)
            {
                <tr>
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Rol</td>
                    @if(Model.IdUsuarioConectado == usuario.Id)
                    {
                        <td>
                            <a class="btn btn-warning btn-sm" asp-action="EditarSinRol" asp-controller="Usuario" asp-route-id="@usuario.Id">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Borrar" asp-controller="Usuario" asp-route-id="@usuario.Id" onclick="return confirm('¿Estás seguro de que deseas borrar este usuario?')">Eliminar cuenta</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.hidden-menu').removeClass('hidden-menu');
        });
    </script>
}
