@model TP10.ViewModels.ModificarTableroViewModel

<h1>Editar Tablero</h1>

<form id="editarForm">
     
    <div>
        <label for="IdUsu">Id Usuario:</label>
        <input type="number" id="IdUsu" name="IdUsuarioPropietario" value="@Model.IdUsuarioPropietario" />
        <label for="Nombre">Nombre:</label>
        <input type="text" id="Nombre" name="Nombre" value="@Model.Nombre"/>
        <label for="desc">Descripción:</label>
        <input type="text" id="desc" name="descripcion" value="@Model.Descripcion" />
    </div>
    <div>
        <button type="button" onclick="guardarEdicion()">Guardar cambios</button>
    </div>
</form>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        function guardarEdicion() {
            var formData = $("#editarForm").serialize();

            $.ajax({
                type: "POST",
                url: "/Tablero/Editar",
                data: formData,
                success: function (data) {
                   
                    console.log("Editado con éxito");
                },
                error: function (error) {
                    console.error("Error al editar: " + error.statusText);
                }
            });
        }
    </script>
}
