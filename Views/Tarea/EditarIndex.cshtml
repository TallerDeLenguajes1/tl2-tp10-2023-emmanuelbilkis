@model TP10.ViewModels.ModificarTareaViewModel

<h1>Editar Tarea</h1>

<form asp-action="Editar" asp-controller="Tarea" method="post">

    <input asp-for="@Model.Id" type="hidden" />

    <div>
        <label for="IdTab">Id Tablero:</label>
        <input type="number" id="IdTab" name="IdTablero" value="@Model.IdTablero" />
        <label for="Nombre">Nombre:</label>
        <input type="text" id="Nombre" name="Nombre" value="@Model.Nombre" />
        <label for="est">Estado:</label>
        <input type="text" id="est" name="Estado" value="@Model.Estado" />
        <label for="desc">Descripción:</label>
        <input type="text" id="desc" name="Descripcion" value="@Model.Descripcion" />
        <label for="color">Color:</label>
        <input type="text" id="color" name="Color" value="@Model.Color" />
        <label for="IdUsu">Id Usuario:</label>
        <input type="number" id="IdUsu" name="IdUsuarioAsignado" value="@Model.IdUsuarioAsignado" />
    </div>
    <div>
        <button type="submit">Guardar cambios</button>
    </div>
</form>
