@model TP10.ViewModels.CrearTableroViewModel

<h1>Crear Tablero</h1>

<form asp-action="Alta" asp-controller="Tablero" method="post">

    <div class="mb-3">
        <label asp-for="@Model.IdUsuarioPropietario" class="form-label"></label>
        <input asp-for="@Model.IdUsuarioPropietario" class="form-control" />
        <span asp-validation-for="@Model.IdUsuarioPropietario" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Nombre" class="form-label"></label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="@Model.Descripcion" class="form-label"></label>
        <input asp-for="@Model.Descripcion" class="form-control" />
    </div>
      
    <button type="submit" class="btn-primary">Crear</button>
    
</form>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
