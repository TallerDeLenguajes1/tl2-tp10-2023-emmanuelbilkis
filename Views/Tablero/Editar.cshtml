@model TP10.ViewModels.ModificarTableroViewModel

<form asp-action="Editar" asp-controller="Tablero" method="post">

    <input asp-for="@Model.Id" type="hidden" />

    <div class="mb-3">
        <label asp-for="@Model.IdUsuarioPropietario" class="form-label"></label>
        <input asp-for="@Model.IdUsuarioPropietario" class="form-control" />
        <span asp-validation-for="IdUsuarioPropietario" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Nombre" class="form-label"></label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn-primary">Editar</button>
</form>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



