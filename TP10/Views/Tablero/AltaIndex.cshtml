<h1>Crear Tablero</h1>

<form id="crearForm">

    <div>
        <label for="IdUsu">Id Usuario:</label>
        <input type="number" id="IdUsu" name="IdUsu"/>
        <label for="Nombre">Nombre:</label>
        <input type="text" id="Nombre" name="Nombre" />
        <label for="desc">Descripción:</label>
        <input type="text" id="desc" name="descripcion" />
    </div>

    <div>
        <button type="button" onclick="guardar()">Crear</button>
    </div> 
</form>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        function guardar(event) {

            var formData = $("#crearForm").serialize();

            $.ajax({
                type: "POST",
                url: "/Tablero/Alta",
                data: formData,
                success: function (data) {
                    console.log("Tablero creado con éxito");
                },
                error: function (error) {
                    console.error("Error al crear: " + error.statusText);
                }
            });
        }
    </script>

}