@model TP10.ViewModels.CrearTableroViewModel

<h1>Crear Tablero</h1>

<form asp-action="Alta" asp-controller="Tablero" method="post">

    <div>
        <label for="IdUsu">Id Usuario:</label>
        <input type="number" id="IdUsu" name="IdUsuarioPropietario" />
        <label for="Nombre">Nombre:</label>
        <input type="text" id="Nombre" name="Nombre" />
        <label for="desc">Descripción:</label>
        <input type="text" id="desc" name="descripcion" />
    </div>

    <div>
        <button type="submit">Crear</button>
    </div>
</form>
